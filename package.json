{
  "name": "jekyll-react-portfolio",
  "version": "1.0.0",
  "description": "Jekyll + React + TypeScript + Tailwind CSS + Vite 하이브리드 포트폴리오",
  "main": "index.js",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "dev:react": "vite --config vite.config.ts",
    "build": "vite build",
    "serve": "pnpm run jekyll:serve",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,scss,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,scss,json,md}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,js,jsx,css,scss,json,md}\" --ignore-path .prettierignore",
    "jekyll:serve": "bundle exec jekyll serve --watch --incremental",
    "jekyll:build": "bundle exec jekyll build",
    "start:hybrid": "concurrently \"pnpm run dev\" \"pnpm run jekyll:serve\"",
    "build:all": "pnpm run build && pnpm run jekyll:build",
    "clean": "rm -rf js/react-build dist",
    "postinstall": "pnpm run build"
  },
  "keywords": [
    "jekyll",
    "react",
    "typescript",
    "tailwind",
    "portfolio",
    "vite"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.15.24",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "framer-motion": "^12.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.6.1"
  }
}